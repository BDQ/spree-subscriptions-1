<%= csrf_meta_tags %>

<div data-hook="admin_variant_issue_edit_header">
  <h2><%= t("editing_issue") %></h2>
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @magazine } %>
</div>

<div data-hook="admin_issue_edit_form">
  <div id="issue-form-wrapper">
    <%= form_for @magazine, :url => admin_magazine_issue_url(@magazine, @issue) do |f| %>
      <%= render 'form', :f => f  %>
    <% end %>
  </div>
</div>